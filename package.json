{
  "name": "{{hoodie_appname}}",
  "version": "1.0.9",
  "type": "app",
  "dependencies": {
    "hoodie-server": "0.9.13",
    "hoodie-plugin-appconfig": "~0.1.0",
    "hoodie-plugin-email": "~0.1.1",
    "hoodie-plugin-users": "0.1.0"
  },
  "subdomain": "hoodie-{{hoodie_appname}}",
  "domains": [
    "admin.hoodie-{{hoodie_appname}}.jit.su",
    "couch.hoodie-{{hoodie_appname}}.jit.su"
  ],
  "scripts": {
    "start": "node node_modules/hoodie-server/bin/start"
  },
  "hoodie": {
    "plugins": [
      "hoodie-plugin-appconfig",
      "hoodie-plugin-email",
      "hoodie-plugin-users"
    ]
  }
}
